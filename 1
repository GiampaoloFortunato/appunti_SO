#include <stdlib.h>
#include <stdio.h>
#include <unistd.h>

//Processo padre che crea due figli - versione 2
int main(){
    pid_t pid1, pid2;

    //creo il primo figlio
    pid1 = fork();
    if(pid1 < 0){
        printf("errore\n");
        return 0;
    }
    if(pid1 == 0){
        printf("Sono il figlio1 con pid: %d\n", getpid());
    }else if(pid1>0){
        pid2 = fork();
        if (pid2 == 0){
            printf("Sono il figlio2 con pid: %d\n", getpid());
        }else if(pid2 > 0){
            printf("Sono il padre con pid: %d\n", getpid());
    
        }
    }
}

// Processo padre che crea due figli - versione 1
